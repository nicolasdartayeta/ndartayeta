---
interface EducationEntry {
  degree: string;
  school: string;
  location: string;
  year: string;
}

interface Props {
  items: EducationEntry[];
}

const { items } = Astro.props;
---

<section class="mb-12">
  <h2 class="text-[1.1rem] font-semibold tracking-[0.08em] uppercase text-muted mb-5">Education</h2>
  <div class="flex flex-col gap-4">
    {items.map((entry) => (
      <div class="glass px-6 py-5">
        <div class="flex items-start justify-between gap-4 flex-wrap">
          <div>
            <h3 class="text-base font-semibold text-accent mb-0.5">{entry.degree}</h3>
            <p class="text-[0.875rem] text-muted m-0">
              {entry.school} &mdash; <span class="italic">{entry.location}</span>
            </p>
          </div>
          <span class="text-[0.8rem] text-muted whitespace-nowrap shrink-0">{entry.year}</span>
        </div>
      </div>
    ))}
  </div>
</section>
