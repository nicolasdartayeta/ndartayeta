---
import { SITE_TITLE } from '../consts';

const path = Astro.url.pathname;
const linkBase = "text-[0.9rem] no-underline px-3 py-1.5 rounded-md transition-all";
const active   = "text-terra bg-[var(--terra-bg)]";
const inactive = "text-muted hover:text-accent hover:bg-accent/6";
---

<header class="sticky top-0 z-[100] px-6 bg-bg/75 backdrop-blur-[20px] border-b border-white/65 shadow-[inset_0_1px_0_rgba(255,255,255,0.85),0_4px_20px_rgba(80,60,30,0.06)]">
  <nav class="max-w-[800px] mx-auto flex items-center justify-between h-[60px]">
    <a href="/" class="font-semibold text-accent tracking-[-0.01em] no-underline">
      {SITE_TITLE}
    </a>
    <div class="flex gap-1">
      <a href="/blog"     class:list={[linkBase, path.startsWith('/blog')     ? active : inactive]}>Blog</a>
      <a href="/projects" class:list={[linkBase, path.startsWith('/projects') ? active : inactive]}>Projects</a>
      <a href="/resume"   class:list={[linkBase, path.startsWith('/resume')   ? active : inactive]}>Resume</a>
    </div>
  </nav>
</header>
