---
interface CourseEntry {
  title: string;
  institution: string;
  location: string;
  dates: { start: string; end?: string };
  description?: string;
}

interface Props {
  items: CourseEntry[];
}

const { items } = Astro.props;
---

<section class="mb-12">
  <h2 class="text-[1.1rem] font-semibold tracking-[0.08em] uppercase text-muted mb-5">Courses & Certifications</h2>
  <div class="flex flex-col gap-4">
    {items.map((entry) => (
      <div class="glass p-6">                                                     
        <div class="flex items-start justify-between gap-4 flex-wrap mb-3">
          <div>
            <h3 class="text-base font-semibold text-accent mb-0.5">{entry.title}</h3>
            <p class="text-[0.875rem] text-muted m-0">
              {entry.institution} &mdash; <span class="italic">{entry.location}</span>
            </p>
          </div>
          <span class="text-[0.8rem] text-muted whitespace-nowrap shrink-0">
            {entry.dates.start} &ndash; {entry.dates.end ?? 'Present'}
          </span>
        </div>
        {entry.description && (
          <p class="text-[0.9rem] leading-relaxed mt-2 mb-0">{entry.description}</p>
        )}
      </div>
    ))}
  </div>
</section>
