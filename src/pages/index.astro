---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const projects = (await getCollection('projects'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>

  <!-- Hero -->
  <section class="pt-16 pb-20">
    <p class="text-[0.8rem] font-semibold tracking-[0.12em] uppercase text-terra mb-3">
      Software Engineer
    </p>
    <h1 class="text-5xl tracking-[-0.03em] mb-4">Hi, I'm Nicolas.</h1>
    <p class="text-lg text-muted max-w-[480px] mb-6">
      I build thoughtful products and write about what I learn along the way.
    </p>

    <!-- Contact / social links -->
    <div class="flex flex-wrap items-center gap-x-5 gap-y-2 mb-8 text-sm text-muted">
      <a href="mailto:nicodarta1305@gmail.com"
         class="flex items-center gap-1.5 text-muted hover:text-accent transition-colors no-underline">
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
        </svg>
        nicodarta1305@gmail.com
      </a>
      <a href="https://github.com/nicolasdartayeta" target="_blank" rel="noopener noreferrer"
         class="flex items-center gap-1.5 text-muted hover:text-accent transition-colors no-underline">
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0 0 24 12c0-6.63-5.37-12-12-12z"/>
        </svg>
        nicolasdartayeta
      </a>
      <a href="https://www.linkedin.com/in/nicolas-dartayeta/" target="_blank" rel="noopener noreferrer"
         class="flex items-center gap-1.5 text-muted hover:text-accent transition-colors no-underline">
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
        </svg>
        Nicolas Dartayeta
      </a>
    </div>

    <div class="flex gap-4 flex-wrap">
      <a href="/projects"
         class="inline-block px-6 py-2.5 bg-accent text-white! rounded-lg text-[0.9rem] font-semibold hover:bg-accent-light transition-colors no-underline">
        View Projects
      </a>
      <a href="/resume"
         class="inline-block px-6 py-2.5 border border-accent/25 text-accent rounded-lg text-[0.9rem] font-semibold hover:border-accent hover:bg-accent/5 transition-colors no-underline">
        Read Resume
      </a>
    </div>
  </section>

  <!-- Featured Projects -->
  {projects.length > 0 && (
    <section class="mb-16">
      <p class="text-[0.75rem] font-semibold tracking-[0.1em] uppercase text-terra mb-6">Projects</p>
      <div class="grid grid-cols-[repeat(auto-fill,minmax(280px,1fr))] gap-5">
        {projects.map((project) => (
          <a href={`/projects/${project.id}/`}
             class="glass block p-6 no-underline text-ink transition-all hover:-translate-y-0.5 hover:shadow-[0_8px_32px_rgba(80,60,30,0.12)]">
            <h3 class="text-[1.1rem] mb-2 text-accent">{project.data.title}</h3>
            <p class="text-[0.9rem] text-muted mb-4 leading-relaxed">{project.data.description}</p>
            <div class="flex flex-wrap gap-1.5">
              {project.data.tags.map((tag: string) => <span class="tag">{tag}</span>)}
            </div>
          </a>
        ))}
      </div>
    </section>
  )}

  <!-- Latest Posts -->
  {posts.length > 0 && (
    <section class="mb-16">
      <p class="text-[0.75rem] font-semibold tracking-[0.1em] uppercase text-terra mb-6">Latest Posts</p>
      <div class="border-t border-accent/10">
        {posts.map((post) => (
          <a href={`/blog/${post.id}/`}
             class="group flex items-baseline justify-between gap-4 py-3.5 border-b border-accent/10 no-underline text-ink">
            <span class="text-[0.975rem] group-hover:text-accent transition-colors">{post.data.title}</span>
            <span class="text-[0.8rem] text-muted whitespace-nowrap shrink-0">
              <FormattedDate date={post.data.pubDate} />
            </span>
          </a>
        ))}
      </div>
      <a href="/blog"
         class="inline-block mt-5 text-[0.875rem] font-semibold text-terra hover:text-terra-light transition-colors no-underline">
        All posts &rarr;
      </a>
    </section>
  )}

</Layout>
